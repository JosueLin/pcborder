<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cloudhouse.mapper.MonthChancesMapper" >
    <select id="query" resultType="MonthChances">
        SELECT * FROM monthchances WHERE id=1
    </select>

    <update id="update" parameterType="MonthChances">
        UPDATE monthchances SET totalChances=#{totalChances} WHERE id=1
    </update>

</mapper>